// ================================================================================== //
// OUTPUT                                                                             //
// ================================================================================== //
// - none                                                                             //
// ================================================================================== //

// ================================================================================== //
// VARIABLES DECLARATION                                                              //
// ================================================================================== //

// Local variables
T1               value;

// Counters
int              i;

// ================================================================================== //
// FIND THE MIN-VALUE                                                                 //
// ================================================================================== //
if (d > 0) {
    minval(x[0], min_value);
    for (i = 1; i < d; i++) {
        minval(x[i], value);
        if (value < min_value) {
            min_value = value;
        }
    } //next i
}

return; };

