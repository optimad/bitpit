// ---------------------------------------------------------------------------------- //
template <class T, size_t d>
double norm(
    const array<T, d>  &x,
    int                 p
) {

// ================================================================================== //
// template <class T, size_t d>                                                       //
// double norm(                                                                       //
//     const array<T, d>  &x,                                                         //
//     int                 p)                                                         //
//                                                                                    //
// Compute the p-norm of a input vector.                                              //
// ================================================================================== //
// INPUT                                                                              //
// ================================================================================== //
// - x           : array<T, d>, input vector                                          //
// - p           : int, norm index                                                    //
// ================================================================================== //
// OUTPUT                                                                             //
// ================================================================================== //
// - n           : double, norm of vector                                             //
// ================================================================================== //

// ================================================================================== //
// VARIABLES DECLARATION                                                              //
// ================================================================================== //

// Local variables
double          z = 0.0;
double          t, y;

// Counters
int             i, j;

// ================================================================================== //
// COMPUTE THE P-NORM                                                                 //
// ================================================================================== //
if (p == 1) { return(norm_1(x)); }
if (p == 2) { return(norm_2(x)); }

if (d > 0) {
    for (i = 0; i < d; i++) {
        y = 1.0;
        t = abs(x[i]);
        for (j = 1; j <= p; j++) {
            y = y*t;
        } //next j
        //z += pow(abs(x[i]), p);
        z += y;
    } //next i
}

return(exp(log(max(z, 1.0e-307))/((double) p))); };

